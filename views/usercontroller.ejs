<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/usercontroller.js"></script>
</head>
<body>
<h1>Gestión de Usuarios</h1>
<table border="1" style="width: 100%; border-collapse: collapse;">
    <thead>
    <tr>
        <th>Nombre de Usuario</th>
        <th>¿Es Admin?</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user => { %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.admin ? 'Sí' : 'No' %></td>
            <td>
                <!-- Botón para mostrar el formulario de cambio de contraseña -->
                <button data-user-id="<%= user.id %>">Cambiar Contraseña</button>
            </td>
        </tr>
        <!-- Formulario de cambio de contraseña debajo de la fila del usuario -->
        <tr id="password-form-<%= user.id %>" style="display: none;">
            <td colspan="3" style="padding: 10px; background-color: #f9f9f9;">
                <form action="/admin/change-password" method="POST">
                    <input type="hidden" name="userId" value="<%= user.id %>"/>
                    <input type="password" name="newPassword" placeholder="Nueva contraseña" required />
                    <button type="submit">Confirmar Cambio</button>
                </form>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
</body>
</html>
